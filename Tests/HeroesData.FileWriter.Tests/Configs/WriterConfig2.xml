<?xml version="1.0" encoding="utf-8" ?>
<Configuration>
  <!--
  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST  TEST
    HeroFileSplit: True: only one file will be created
                   False: one file for each hero will be created
    
    Description, ShortTooltip, FullTooltip:
      0 - RawDescription
      1 - PlainText
      2 - PlainTextWithNewlines
      3 - PlainTextWithScaling
      4 - PlainTextWithScalingWithNewlines
      5 - ColoredText
      6 - ColoredTextWithScaling
  -->
  <JsonWriter enabled="true">
    <FileSplit>False</FileSplit>
    <Description>2</Description>
    <ShortTooltip>2</ShortTooltip>
    <FullTooltip>2</FullTooltip>
    <ImageExtension>png</ImageExtension>
    <IncludeWeapons>False</IncludeWeapons>
    <IncludeAbilities>True</IncludeAbilities>
    <IncludeSubAbilities>False</IncludeSubAbilities>
    <IncludeTalents>True</IncludeTalents>
    <IncludeHeroUnits>False</IncludeHeroUnits>
    <Portrait>
      <HeroSelect>False</HeroSelect>
      <Leaderboard>False</Leaderboard>
      <LoadingPortrait>False</LoadingPortrait>
      <PartyPanel>False</PartyPanel>
      <Target>False</Target>
    </Portrait>
  </JsonWriter>
  <XmlWriter enabled="true">
    <FileSplit>False</FileSplit>
    <Description>2</Description>
    <ShortTooltip>2</ShortTooltip>
    <FullTooltip>2</FullTooltip>
    <ImageExtension>png</ImageExtension>
    <IncludeWeapons>False</IncludeWeapons>
    <IncludeAbilities>True</IncludeAbilities>
    <IncludeSubAbilities>False</IncludeSubAbilities>
    <IncludeTalents>True</IncludeTalents>
    <IncludeHeroUnits>False</IncludeHeroUnits>
    <Portrait>
      <HeroSelect>False</HeroSelect>
      <Leaderboard>False</Leaderboard>
      <LoadingPortrait>False</LoadingPortrait>
      <PartyPanel>False</PartyPanel>
      <Target>False</Target>
    </Portrait>
  </XmlWriter>
</Configuration>
