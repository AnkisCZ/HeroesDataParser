<?xml version="1.0" encoding="utf-8" ?>
<Configuration>
  <!--
    HeroFileSplit: True: only one file will be created
                   False: one file for each hero will be created
    
    Description, ShortTooltip, FullTooltip:
      0 - RawDescription
      1 - PlainText
      2 - PlainTextWithNewlines
      3 - PlainTextWithScaling
      4 - PlainTextWithScalingWithNewlines
      5 - ColoredText
      6 - ColoredTextWithScaling
  -->
  <JsonWriter enabled="true">
    <FileSplit>False</FileSplit>
    <Description>3</Description>
    <ShortTooltip>3</ShortTooltip>
    <FullTooltip>3</FullTooltip>
    <ImageExtension>png</ImageExtension>
    <IncludeWeapons>True</IncludeWeapons>
    <IncludeAbilities>True</IncludeAbilities>
    <IncludeSubAbilities>True</IncludeSubAbilities>
    <IncludeTalents>True</IncludeTalents>
    <IncludeHeroUnits>True</IncludeHeroUnits>
    <Portrait>
      <HeroSelect>True</HeroSelect>
      <Leaderboard>True</Leaderboard>
      <LoadingPortrait>True</LoadingPortrait>
      <PartyPanel>True</PartyPanel>
      <Target>True</Target>
    </Portrait>
  </JsonWriter>
  <XmlWriter enabled="true">
    <FileSplit>False</FileSplit>
    <Description>3</Description>
    <ShortTooltip>3</ShortTooltip>
    <FullTooltip>3</FullTooltip>
    <ImageExtension>png</ImageExtension>
    <IncludeWeapons>True</IncludeWeapons>
    <IncludeAbilities>True</IncludeAbilities>
    <IncludeSubAbilities>True</IncludeSubAbilities>
    <IncludeTalents>True</IncludeTalents>
    <IncludeHeroUnits>True</IncludeHeroUnits>
    <Portrait>
      <HeroSelect>True</HeroSelect>
      <Leaderboard>True</Leaderboard>
      <LoadingPortrait>True</LoadingPortrait>
      <PartyPanel>True</PartyPanel>
      <Target>True</Target>
    </Portrait>
  </XmlWriter>
</Configuration>
